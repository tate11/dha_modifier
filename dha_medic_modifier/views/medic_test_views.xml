<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_medic_test_tree" model="ir.ui.view">
            <field name="name">medic.test.tree</field>
            <field name="model">medic.test</field>
            <field name="arch" type="xml">
                <tree string="Test">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="customer"/>
                    <field name="sex_id"/>
                    <field name="day_of_birth"/>
                    <field name="doctor_assign"/>
                    <field name="assign_date"/>
                    <field name="product_test"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_medic_test_form" model="ir.ui.view">
            <field name="name">medic.test.form</field>
            <field name="model">medic.test</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,processing,done"
                               clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <label for="type" class="oe_edit_only"/>
                        <h3>
                            <field name="type"/>,
                            <field name="product_test"/>
                            <field name="show_image" invisible="1"/>
                        </h3>
                        <group col="4">
                            <group colspan="2">
                                <field name="customer_id"/>
                                <field name="customer"/>
                                <field name="sex_id"/>
                                <field name="center_id"/>
                            </group>
                            <group colspan="2">
                                <field name="day_of_birth"/>
                                <field name="doctor_assign"/>
                                <field name="assign_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                        <notebook>
                            <page string="Images"
                                  attrs="{'invisible' : [('show_image','!=', True)]}">
                                <group>
                                    <group>
                                        <field name="image_res1" widget="image" nolable="1"/>
                                        <field name="image_res2" widget="image" nolable="1"/>
                                        <field name="image_res3" widget="image" nolable="1"/>
                                    </group>
                                    <group>
                                        <field name="image_res4" widget="image" nolable="1"/>
                                        <field name="image_res5" widget="image" nolable="1"/>
                                        <field name="image_res6" widget="image" nolable="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Consumable Supplies">
                                <field name="consumable_supplies">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                        <field name="product_uom_id"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="qty"/>
                                            <field name="product_uom_id"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <!--<page string="Attachments">-->
                            <!--<field name="attachment_ids"-->
                            <!--</page>-->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_medic_test_total" model="ir.actions.act_window">
            <field name="name">Total Test</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medic.test</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <record id="action_medic_test_lab" model="ir.actions.act_window">
            <field name="name">Lab Test</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medic.test</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain" eval="[('type','=', ref('dha_medic_modifier.medic_test_type_lab_test', False))]"/>
            <field name="context" eval="{'default_type' : ref('dha_medic_modifier.medic_test_type_lab_test', False)}"/>
        </record>

        <record id="action_medic_test_image" model="ir.actions.act_window">
            <field name="name">Image Test</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medic.test</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain" eval="[('type','=', ref('dha_medic_modifier.medic_test_type_image_test', False))]"/>
            <field name="context"
                   eval="{'default_type' : ref('dha_medic_modifier.medic_test_type_image_test', False)}"/>
            <field name="context">{}</field>
        </record>

        <record id="action_medic_test_echograph" model="ir.actions.act_window">
            <field name="name">Echograph</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medic.test</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain" eval="[('type','=', ref('dha_medic_modifier.medic_test_type_echograph', False))]"/>
            <field name="context" eval="{'default_type' : ref('dha_medic_modifier.medic_test_type_echograph', False)}"/>
            <field name="context">{}</field>
        </record>

        <record id="action_medic_test_electrocardiogram" model="ir.actions.act_window">
            <field name="name">Electrocardiogram</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medic.test</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"
                   eval="[('type','=', ref('dha_medic_modifier.medic_test_type_electrocardiogram', False))]"/>
            <field name="context"
                   eval="{'default_type' : ref('dha_medic_modifier.medic_test_type_electrocardiogram', False)}"/>
            <field name="context">{}</field>
        </record>

        <record id="view_medic_test_type_tree" model="ir.ui.view">
            <field name="name">medic.test.type.tree</field>
            <field name="model">medic.test.type</field>
            <field name="arch" type="xml">
                <tree string="Medic Test Type">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_medic_test_type_form" model="ir.ui.view">
            <field name="name">medic.test.type.form</field>
            <field name="model">medic.test.type</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_medic_test_type" model="ir.actions.act_window">
            <field name="name">Medic Test Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medic.test.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>


        <menuitem id="menu_medic_lab_test" parent="menu_medic_root" sequence="25" name="Lab Tests"/>

        <menuitem id="menu_medic_image_test" parent="menu_medic_root" sequence="30" name="Image Tests"/>


        <menuitem id="menu_medic_lab_test_root" parent="menu_medic_lab_test" sequence="5" name="Lab Test"
                  action="action_medic_test_lab"/>

        <menuitem id="menu_medic_image_root" parent="menu_medic_image_test" sequence="10" name="Image Test"
                  action="action_medic_test_image"/>

        <menuitem id="menu_medic_echograph_root" parent="menu_medic_image_test" sequence="15" name="Echograph"
                  action="action_medic_test_echograph"/>

        <menuitem id="menu_medic_electrocardiogram_root" parent="menu_medic_image_test" sequence="25"
                  name="Electrocardiogram" action="action_medic_test_electrocardiogram"/>

        <menuitem id="menu_medic_lab_test_configurations_type" action="action_medic_test_type"
                  parent="menu_medic_lab_test_configurations" sequence="5"/>
    </data>
</odoo>