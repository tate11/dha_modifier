<odoo>
    <data>
        <record id="base.view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="customer_id"/>
                    <field name="display_name" string="Name"/>
                    <field name="sex_id"/>
                    <field name="age"/>
                    <field name="last_check_in_time"/>

                    <field name="function" invisible="1"/>
                    <field name="phone" invisible="1"/>
                    <field name="email" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="check_parner_wizard" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="customer_id"/>
                    <field name="name"/>
                    <field name="mobile"/>
                    <field name="sex_id"/>
                    <field name="day_of_birth"/>
                    <!--<field name="cmnd_passport"/>-->
                </tree>
            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_go_person_inv" string="To Invoice" type="object" class="oe_highlight"
                                attrs="{'invisible': [('company_type','!=','person')]}"/>
                    </header>
                </xpath>
                <div name="button_box" position="inside">
                    <button type="object"
                            class="oe_stat_button"
                            id="company_check_history"
                            icon="fa-history"
                            name="open_company_check_history"
                            attrs="{'invisible': [('is_company', '=', False)]}"
                            context="{'default_company_id': active_id}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="total_history"/>
                            </span>
                            <span class="o_stat_text">Check History</span>
                        </div>
                    </button>
                </div>
                <xpath expr="//notebook" position="inside">
                    <page name="personal_infomation" string="Information"
                          attrs="{'invisible': [('company_type','!=','person')]}">
                        <group col="4">
                            <group colspan="2">
                                <field name="sex_id"/>
                                <field name="last_check_in_time"/>
                                <field name="day_of_birth"/>
                                <field name="age"/>
                            </group>
                            <group colspan="2">
                                <field name="ethnic_id"/>
                                <field name="nationality_id"/>
                                <field name="cmnd_passport"/>
                                <field name="married_status"/>
                            </group>
                        </group>
                    </page>
                    <page name="family" string="Family"
                          attrs="{'invisible': [('company_type','!=','person')]}">
                        <field name="family_persons">
                            <tree editable="bottom">
                                <field name="person_id"/>
                                <field name="sex_id"/>
                                <field name="relation"/>
                                <field name="day_of_birth"/>
                                <field name="mobile"/>
                            </tree>
                            <form>
                                <group col="4">
                                    <group colspan="2">
                                        <field name="person_id"/>
                                        <field name="sex_id"/>
                                        <field name="relation"/>
                                    </group>
                                    <group colspan="2">
                                        <field name="day_of_birth"/>
                                        <field name="mobile"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                    <page string="Lab Tests" attrs="{'invisible': [('company_type','!=','person')]}">
                        <field name="medic_lab_test_compute_ids">
                            <tree create="0" delete="0">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="product_test"/>
                                <field name="note"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Image Tests"
                          attrs="{'invisible': [('company_type','!=','person')]}">
                        <field name="medic_image_test_compute_ids">
                            <tree create="0" delete="0">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="product_test"/>
                                <field name="note"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page name="insurance" string="Insurance" attrs="{'invisible': [('company_type','!=','person')]}">
                        <field name="insurrance_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="join_date"/>
                                <field name="expiry_date"/>
                                <field name="first_code"/>
                                <field name="address"/>
                            </tree>
                            <form>
                                <group col="4">
                                    <group colspan="2">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="join_date"/>
                                    </group>
                                    <group colspan="2">
                                        <field name="expiry_date"/>
                                        <field name="first_code"/>
                                        <field name="address"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                    <page name="history" string="History" attrs="{'invisible': [('company_type','!=','person')]}">
                        <field name="medical_bill_ids" readonly="1"/>
                    </page>
                    <page name="sale_order_page" string="Prescriptions"
                          attrs="{'invisible': [('company_type','!=','person')]}">
                        <field name="medicine_order_ids" readonly="1"/>
                    </page>
                </xpath>
                <field name="phone" position="before">
                    <field name="customer_id"/>
                </field>
            </field>
        </record>

        <record id="view_partner_info_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sex_id"/>
                    <field name="day_of_birth"/>
                    <field name="cmnd_passport"/>
                    <field name="mobile"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="res_partner_kanban_view">
            <field name="name">res.partner.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="inside">
                    <field name="sex_id"/>
                    <field name="day_of_birth"/>
                    <field name="age"/>
                </xpath>
                <xpath expr="//div[@class='oe_kanban_details']/ul" position="inside">
                    <li t-if="record.sex_id.raw_value"><field name="sex_id"/></li>
                    <li t-if="record.age.raw_value">Age: <field name="age"/></li>
                </xpath>
            </field>
        </record>
        <record id="view_patients_form" model="ir.ui.view">
            <field name="name">res.patients.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Patients">
                    <header>
                        <button name="action_go_person_inv" string="To Invoice" type="object" class="oe_highlight"
                                attrs="{'invisible': [('company_type','!=','person')]}"/>
                    </header>
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"
                               options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                        <div class="oe_title">
                            <field name="is_company" invisible="1"/>
                            <field name="commercial_partner_id" invisible="1"/>
                            <field name="company_type" widget="radio"
                                   class="oe_edit_only"
                                   options="{'horizontal': true}" invisible="1"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"
                                       attrs="{'required' : [('type', '=', 'contact')]}"/>
                            </h1>
                            <div class="o_row">
                                <field name="parent_id"
                                       placeholder="Company"
                                       domain="[('is_company', '=', True)]"
                                       options='{"no_create": True}'
                                       attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
                                <field name="company_name"
                                       attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
                                <button name="create_company" type="object" string="Create company"
                                        class="btn btn-sm oe_edit_only fa fa-external-link btn btn-link "
                                        attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="type" attrs="{'invisible': [('parent_id','=', False)]}"
                                       groups="base.group_no_one"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <div class="oe_edit_only">
                                        <button name="open_parent" type="object" string="(edit)" class="oe_link"
                                                attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                    </div>
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="city" placeholder="City" class="o_address_city"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                                           context="{'country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                                <field name="category_id" widget="many2many_tags" placeholder="Tags..."
                                       options="{'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="function" placeholder="e.g. Sales Director"
                                       attrs="{'invisible': [('is_company','=', True)]}"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="fax"/>
                                <field name="user_ids" invisible="1"/>
                                <field name="email" widget="email" attrs="{'required': [('user_ids','!=', [])]}"/>
                                <field name="title" options='{"no_open": True}'
                                       attrs="{'invisible': [('is_company', '=', True)]}"/>
                                <field name="lang"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="personal_infomation" string="Information"
                                  attrs="{'invisible': [('company_type','!=','person')]}">
                                <group col="4">
                                    <group colspan="2">
                                        <field name="sex_id"/>
                                        <field name="last_check_in_time"/>
                                        <field name="day_of_birth"/>
                                        <field name="age"/>
                                    </group>
                                    <group colspan="2">
                                        <field name="ethnic_id"/>
                                        <field name="nationality_id"/>
                                        <field name="cmnd_passport"/>
                                        <field name="married_status"/>
                                    </group>
                                </group>
                            </page>
                            <page name="family" string="Family"
                                  attrs="{'invisible': [('company_type','!=','person')]}">
                                <field name="family_persons">
                                    <tree editable="bottom">
                                        <field name="person_id"/>
                                        <field name="sex_id"/>
                                        <field name="relation"/>
                                        <field name="day_of_birth"/>
                                        <field name="mobile"/>
                                    </tree>
                                    <form>
                                        <group col="4">
                                            <group colspan="2">
                                                <field name="person_id"/>
                                                <field name="sex_id"/>
                                                <field name="relation"/>
                                            </group>
                                            <group colspan="2">
                                                <field name="day_of_birth"/>
                                                <field name="mobile"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <!--<page string="Lab Tests" attrs="{'invisible': [('company_type','!=','person')]}">-->
                            <!--<field name="medic_lab_test_compute_ids">-->
                            <!--<tree create="0" delete="0">-->
                            <!--<field name="name"/>-->
                            <!--<field name="type"/>-->
                            <!--<field name="product_test"/>-->
                            <!--<field name="note"/>-->
                            <!--<field name="state"/>-->
                            <!--</tree>-->
                            <!--</field>-->
                            <!--</page>-->
                            <!--<page string="Image Tests"-->
                            <!--attrs="{'invisible': [('company_type','!=','person')]}">-->
                            <!--<field name="medic_image_test_compute_ids">-->
                            <!--<tree create="0" delete="0">-->
                            <!--<field name="name"/>-->
                            <!--<field name="type"/>-->
                            <!--<field name="product_test"/>-->
                            <!--<field name="note"/>-->
                            <!--<field name="state"/>-->
                            <!--</tree>-->
                            <!--</field>-->
                            <!--</page>-->
                            <page name="insurance" string="Insurance"
                                  attrs="{'invisible': [('company_type','!=','person')]}">
                                <field name="insurrance_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="join_date"/>
                                        <field name="expiry_date"/>
                                        <field name="first_code"/>
                                        <field name="address"/>
                                    </tree>
                                    <form>
                                        <group col="4">
                                            <group colspan="2">
                                                <field name="name"/>
                                                <field name="type"/>
                                                <field name="join_date"/>
                                            </group>
                                            <group colspan="2">
                                                <field name="expiry_date"/>
                                                <field name="first_code"/>
                                                <field name="address"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="history" string="History"
                                  attrs="{'invisible': [('company_type','!=','person')]}">
                                <field name="medical_bill_ids" readonly="1"/>
                            </page>
                            <!--<page name="sale_order_page" string="Prescriptions"-->
                            <!--attrs="{'invisible': [('company_type','!=','person')]}">-->
                            <!--<field name="medicine_order_ids" readonly="1"/>-->
                            <!--</page>-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_partner_patients_form" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1, "search_default_type_person" : 1,'form_view_ref':
                'dha_medic_modifier.view_patients_form'}
            </field>
            <field name="domain">[('is_company','=', False)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
                <p>
                    Odoo helps you easily track all activities related to
                    a customer: discussions, history of business opportunities,
                    documents, etc.
                </p>
            </field>
        </record>

        <record id="action_partner_company_form" model="ir.actions.act_window">
            <field name="name">Company</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1,'default_company_type' :
                'company','default_is_company':True}
            </field>
            <field name="domain">[('is_company','=', True)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
                <p>
                    Odoo helps you easily track all activities related to
                    a customer: discussions, history of business opportunities,
                    documents, etc.
                </p>
            </field>
        </record>

        <menuitem id="menu_medic_customer" parent="menu_medic_root" sequence="1" name="Patients"
                  action="action_partner_patients_form"/>

        <menuitem id="menu_medic_company" parent="menu_medic_root" sequence="3" name="Company"
                  action="action_partner_company_form"/>

    </data>
</odoo>