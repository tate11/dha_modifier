    <template id="report_medic_medical_check_list_report_document">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="page">
            <div class="row">
                <style>
                    .black_border > td {
                        border: 1px solid black !important;
                    }
                    .td_dotted_wrap {
                        padding-bottom: 0px !important;
                        padding-top: 0px !important;
                        padding-left: 0px !important;
                        position: relative;
                        z-index: 10;
                        overflow: hidden;
                    }
                    .dotted_fill {
                        background-color: white;
                        padding-right: 4px;
                    }
                    .dotted_fill:after{
                        content: " ................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................ ";
                        position: absolute;
                        z-index: -1;
                        word-break: break-word;
                        left: 0;
                        right: 0;
                        overflow: hidden;
                        height: 60px;
                    }
                </style>
                <div class="col-xs-3">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                         style="max-height: 80px;"/>
                </div>
                <div class="col-xs-9">
                    <h4 style="">PHÒNG KHÁM ĐA KHOA DHA</h4>
                    <t t-if="doc.center_id.address" style="margin-left:25px">Địa chỉ:
                        <span style="margin-left:5px" t-esc='doc.center_id.address'/>
                    </t>
                    <br/>
                    <t t-if="doc.center_id.mobile" style="margin-left:25px">Điện thoại:
                        <span style="margin-left:5px;margin-right:5px"
                              t-esc='doc.center_id.mobile'/>
                        <span t-if="doc.center_id.email">- Email :
                            <span style="margin-left:10px;" t-esc='doc.center_id.email'/>
                        </span>
                    </t>
                </div>
            </div>
            <h3 style="text-align:center;font-weight:bolder;margin-top:0px;margin-bottom:10px">KHÁM SỨC KHOẺ ĐỊNH KỲ
            </h3>
            <div class="" style="margin-top:5px;">
                <table class="" style="display:inline-block;width:550px">
                    <tbody>
                        <tr>
                            <td style="width:50%">
                                <b style="float:left">Họ tên:
                                    <t style="margin-left:10px" t-esc='doc.customer.name'/>
                                </b>
                            </td>
                            <td/>
                        </tr>
                        <tr>
                            <td style="margin-top:5px">
                                <b t-if="doc.customer.sex" style="">Giới tính:
                                    <t style="margin-left:10px"
                                       t-esc=" 'Nam' if doc.customer.sex == 'male' else 'Nữ'"/>
                                </b>
                            </td>
                            <td>
                                <b t-if="doc.customer.day_of_birth" style="">Ngày sinh:
                                    <t style="margin-left:10px"
                                       t-esc="time.strftime('%d/%m/%Y', time.strptime(doc.customer.day_of_birth, '%Y-%m-%d'))"/>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <b t-if="doc.customer_parent_id" style="">Công ty:
                                    <span style="margin-left:5px"
                                          t-esc="doc.customer_parent_id.name"/>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <b t-if="doc.description" style="">Ghi chú:
                                    <span style="margin-left:5px"
                                          t-esc="doc.description"/>
                                </b>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div style="float:right;margin-top:-5px;text-align:center;">
                    <img t-if="doc.customer.customer_id" class="barcode"
                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('QR', doc.customer.customer_id, 75, 75)"/>
                    <h3 style="margin-top:0;"><span style="margin-left:5px" t-esc="doc.customer_id"/></h3>
                </div>
            </div>
            <t t-call="dha_medic_report.report_medic_medical_check_list_the_luc"/>
            <t t-call="dha_medic_report.report_medic_medical_check_list_lam_sang"/>
            <t t-call="dha_medic_report.report_medic_medical_check_list_can_lam_sang"/>
            <t t-call="dha_medic_report.report_medic_medical_check_list_ket_luan"/>
        </div>
        <div class="footer">
        </div>
    </template>


    <template id="report_medic_medical_check_list_report">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="dha_medic_report.report_medic_medical_check_list_report_document"/>
                <t t-call="dha_medic_report.report_check_list_document"/>
            </t>
        </t>
    </template>
</odoo>